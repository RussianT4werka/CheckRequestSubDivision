<Page x:Class="CheckRequestSubDivision.Views.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CheckRequestSubDivision.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignInPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Вход" HorizontalAlignment="Center"/>
            <Label Content="Код сотрудника подразделения" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding Code}"/>
            <Button Content="Войти" Command="{Binding SignIn}"/>
        </StackPanel>
    </Grid>
</Page>
